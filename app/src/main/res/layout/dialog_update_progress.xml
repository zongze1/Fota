<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1430px"
    android:layout_height="600px"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_update_notitle"
    android:theme="@style/UpdateDialogTheme" >

    <ImageView
        android:id="@+id/dialog_update_progress_close"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_marginTop="28px"
        android:layout_marginRight="28px"
        android:background="@drawable/selector_delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/dialog_update_progress_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="190px"
        android:text="@string/downloading"
        android:textSize="40px"
        android:textColor="@android:color/white"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    
    <com.coagent.jac.s7.fota.widget.ProgressView
        android:id="@+id/dialog_update_progress_pv"
        android:layout_width="850px"
        android:layout_height="50px"
        android:layout_marginTop="60px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_update_progress_content"/>
</android.support.constraint.ConstraintLayout>