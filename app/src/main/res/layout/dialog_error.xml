<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1430px"
    android:layout_height="600px"
    android:layout_marginLeft="120px"
    android:orientation="vertical"
    android:gravity="center"
    android:theme="@style/UpdateDialogTheme"
    android:background="@drawable/dialog_update_no_title">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36px"
        android:drawablePadding="30px"
        android:drawableLeft="@drawable/warning"
        android:gravity="center"
        android:textColor="@color/dialog_warning_message"
        android:text="@string/update_error_title"/>
    
    <TextView
        android:id="@+id/dialog_error_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32px"
        android:layout_marginTop="50px"
        android:textColor="@color/dialog_message"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32px"
        android:textColor="@color/dialog_message"
        android:layout_marginTop="28px"
        android:text="@string/update_error_content" />
</LinearLayout>