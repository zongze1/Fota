<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="750px"
    android:layout_height="390px"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="120px"
    android:background="@drawable/dialog_update_no_title"
    android:theme="@style/UpdateDialogTheme">
    <ImageView
        android:id="@+id/dialog_loading_close"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_marginTop="15px"
        android:layout_marginLeft="20px"
        android:scaleType="fitCenter"
        android:background="@drawable/selector_delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:layout_width="150px"
        android:layout_height="150px"
        android:src="@drawable/dialog_loading"
        android:layout_marginTop="86px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:textSize="32px"
        android:layout_marginBottom="64px"
        android:textColor="@color/dialog_message"
        android:text="@string/update_check"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>